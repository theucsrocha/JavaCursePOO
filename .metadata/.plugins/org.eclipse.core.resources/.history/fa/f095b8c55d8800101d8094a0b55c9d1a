package application;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;
import java.util.stream.Collectors;

import entities.Employee;

public class App {

	public static void main(String[] args) {

		String path = "C:\\Users\\Matheus\\Documents\\in.txt";
		List<Employee> list = new ArrayList<>();
		try (BufferedReader br = new BufferedReader(new FileReader(path))) {
			String line = br.readLine();
			while (line != null) {
				String[] filds = line.split(",");
				list.add(new Employee(filds[0], filds[1], Double.parseDouble(filds[2])));
				line = br.readLine();
			}

		}

		catch (IOException e) {
			e.getMessage();
		}
		Scanner sc = new Scanner(System.in);
		Double value = sc.nextDouble();
		
		
		List<Employee> list2 = list.stream().filter(x -> x.getSalary() > value).sorted((x,y) -> x.getEmail().compareTo(y.getEmail())).collect(Collectors.toList());
		
		System.out.println("Email of people whose salary is more than " + value + ":");
		for(Employee e : list2) {
			System.out.println(e);
		}
		
		System.out.println("Sum of salary of people whose name starts with 'M'");
		Double avg = list.stream().filter(x -> x.getName().charAt(0) == 'M').map(x -> x.getSalary()).reduce(0.0,(x,y) -> x + y);]
		System.out.println(avg);

	}
}
