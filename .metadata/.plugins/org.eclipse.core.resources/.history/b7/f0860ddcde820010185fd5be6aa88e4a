package application;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.util.Date;
import java.util.Scanner;

import agregation_exercise.WorkerLevel;
import entites.HourContract;
import entites.Worker;

public class main {

	public static void main(String[] args) {
		
		DateTimeFormatter formatter = DateTimeFormatter.ofPattern("dd/MM/yyyy");
		Scanner sc = new Scanner(System.in);

		System.out.println("Enter the departament:");
		String departament = sc.nextLine();

		System.out.println("Enter woeker data:");

		System.out.println("Name:");
		String name = sc.nextLine();

		System.out.println("Level:");
		String level = sc.nextLine();

		System.out.println("Base salary:");
		Double salary = sc.nextDouble();

		Worker worker = new Worker(name, WorkerLevel.valueOf(level), salary);

		System.out.println("How many contracts to this worker?");
		int n = sc.nextInt();

		for (int i = 0; i < n; i++) {
			LocalDate date = null;
			sc.nextLine();
			System.out.println("Date:");
			String sDate = sc.nextLine();
			LocalDate date2 = LocalDate.parse(sDate, formatter);

			System.out.println("Value per hour:");
			Double valueHour = sc.nextDouble();

			System.out.println("Duration:");
			int duration = sc.nextInt();
			HourContract c = new HourContract(date2, valueHour, duration);
			worker.addContract(c);

		}
		
		System.out.println("Enter the month and year to calculate income");
		sc.nextLine();
		String sDate = sc.nextLine();
		LocalDate date = LocalDate.parse(sDate, formatter);
		
		
		System.out.printf("Name:" + worker.getName() + "%n" + "Departament:" + departament + "%n" + "Income for" + date + worker.income(date.getYear(),date.getMonthValue()));
		
		sc.close();
	}
	

}
